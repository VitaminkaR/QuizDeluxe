<Window x:Class="QuizDeluxe.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizDeluxe"
        mc:Ignorable="d"
        Title="Quiz Deluxe" Height="720" Width="1280" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="gradient_zelenyj_tekstura_131365_1280x720.jpg"/>
    </Window.Background>
    <Canvas>
        <TextBlock FontFamily="Arial Black" FontSize="20" x:Name="Players_TextBlock">
            <TextBlock.Foreground>
                <SolidColorBrush Color="White" Opacity="0.75"/>
            </TextBlock.Foreground>Players:</TextBlock>
    </Canvas>
</Window>
